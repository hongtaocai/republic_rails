<!DOCTYPE html>
<html>
<head>
  <title>Republic</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="navbar navbar-inverse navbar-fixed-top mybar" role="navigation">
  <div class="container">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="projectname navbar-brand" href="/"><xxx style="color: rgb(255,88,40);">Re</xxx><xxx style="color: rgb(255,255,255);">public</xxx></a>

    </div>
    <div class="navbar-collapse collapse">
      <form class="navbar-form navbar-left" action="/search/index" method="get" role="search">
        <div class="form-group">
          <input type="text" name="search_text" class="inputbox form-control" value= "<%= session[:search_text] %>" autocomplete="off" placeholder="Search for publications, questions and reviews">
        </div>
        <button type="submit" class="btn btn-large btn-primary ">Search</button>
      </form>

      <!--<div class="nav navbar-form navbar-right">-->
        <!--<button class="btn btn-default">Ask Question</button>-->
      <!--</div>-->

      <% if signed_in? %>




      <ul class="nav navbar-nav navbar-right">

            <li class="dropdown">
              <a href="#" class="dropdown-toggle account-dropdown" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>

      </ul>
      <% else %>
          <div class="nav navbar-form navbar-right">
            <div>
            <%= button_to "Sign in", signin_path , method: :get,  class: "btn btn-large btn-primary" %>
              </div>
          </div>
          <!--<li><%= link_to "Sign in", signin_path %></li>-->
      <% end %>




    </div><!--/.nav-collapse -->
  </div><!--/.container-fluid -->
    </div> <!-- /.container -->
</div>

<div class="container content-container">

  <% if false %>
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <% end %>


    <div class="col-md-9">
      <%= yield %>
    </div>

    <div class="col-md-3">
      <div class="bs-docs-sidebar hidden-print affix-top" role="complementary">
      <ul class="nav bs-docs-sidebar" >
        <li>
          <%= link_to 'Trending Publications', publications_path  %>
        </li>
        <li>
          <%= link_to 'Open Questions', questions_path  %>
        </li>
        <li>
          <%= link_to 'Top Reviews', reviews_path %>
        </li>

      </ul>
      </div>
    </div>


